{
  "version": 2,
  "outputDirectory": "admin/dist",
  "functions": {
    "api/index.js": {
      "includeFiles": "admin/dist/**"
    }
  },
  "rewrites": [
    { "source": "/api/(.*)", "destination": "/api/index.js" },
    { "source": "/assets/(.*)", "destination": "/assets/$1" },
    { "source": "/(.*)", "destination": "/api/index.js" }
  ]
}
